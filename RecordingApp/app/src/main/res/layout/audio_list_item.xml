<?xml version="1.0" encoding="utf-8"?>
<FrameLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/list_item"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/card_bg"
        card_view:cardCornerRadius="2dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:clickable="true"
            android:paddingTop="24dp"
            android:paddingBottom="24dp" >

            <ImageButton
                android:id="@+id/playButton"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:background="#00000000"
                android:backgroundTint="@color/very_dark_greyish_red"
                android:src="@drawable/ic_play_blue" />

            <TextView
                android:id="@+id/filename"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="28"
                android:text="aa-bbbb-c"
                android:textColor="@color/primary_dark_font"
                android:textSize="24sp"
                android:gravity="center_vertical|left"
                android:paddingLeft="8dp" />

            <TextView
                android:id="@+id/duration"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:text="00:00:00"
                android:textColor="@color/primary_dark_font"
                android:textSize="24sp"
                android:gravity="center_vertical|left"
                android:textIsSelectable="false"
                android:paddingLeft="8dp" />

            <TextView
                android:id="@+id/date"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="28"
                android:text="2015/10/30"
                android:textColor="@color/primary_dark_font"
                android:textSize="24sp"
                android:gravity="center_vertical|left"
                android:paddingLeft="8dp" />

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                android:background="#00000000"
                android:gravity="center" >

                <CheckBox
                    android:id="@+id/checkBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:button="@drawable/ic_check_box_empty" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>