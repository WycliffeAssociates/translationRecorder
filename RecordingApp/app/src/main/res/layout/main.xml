<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".MainMenu">

    <ImageButton
        android:id="@+id/files"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="33"
        android:background="@color/secondary"
        android:src="@drawable/ic_files"
        android:contentDescription="@string/files_content_desc"
        android:clickable="true"
        />

    <RelativeLayout
        android:id="@+id/new_record"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="67"
        android:background="@color/primary"
        android:clickable="true"
        >

        <ImageButton
            android:id="@+id/record_icon"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="@color/transparent"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_record"
            android:contentDescription="@string/record_content_desc"
            android:clickable="false"
            />

        <TextView
            android:id="@+id/language_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/default_padding_xs"
            android:textColor="@color/text_light"
            android:textSize="@dimen/text_size_m"
            android:textStyle="bold"
            android:text="Language"
            android:layout_below="@+id/record_icon"
            />

        <TextView
            android:id="@+id/book_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/default_padding_xs"
            android:textColor="@color/text_light"
            android:textSize="@dimen/text_size_m"
            android:textStyle="bold"
            android:text="Book"
            android:layout_below="@+id/language_view"
            />

    </RelativeLayout>

</LinearLayout>
